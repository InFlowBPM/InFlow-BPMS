@model strICT.InFlow.Db.Contracts.InFlow.WS_Folder
@{
    var project = new strICT.InFlow.Db.Contracts.InFlow.WS_Project();
    project.Folder_Id = Model.Id;

}

<div class="panel panel-default">
    <div class="panel-heading">Create new project in <b>@Model.Name</b></div>
    <div class="panel-body">
        @using (Html.BeginForm("CreateProject", "Project", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.ValidationSummary(true)

            @Html.Hidden("Folder_Id", project.Folder_Id)

            <div class="form-group">
                @Html.LabelFor(model => project.Name, new { @class = "col-md-2 control-label" })

                @*<input class="form-control" data-val="true" data-val-required="Das Feld &quot;Name&quot; ist erforderlich." id="Name" name="Name" value="" type="text" />*@

                @Html.TextBoxFor(model => Model.Name, new { @class = "form-control", required = "required " })

            </div>
            <div class="text-right">
                <button type="submit" class="btn btn-default">Save changes</button>
                @Html.ActionLink("Cancel", "Index", new { id = -1 }, new { @class = "btn btn-default" })
            </div>
        }
    </div>
</div>

