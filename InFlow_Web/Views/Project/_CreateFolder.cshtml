@model strICT.InFlow.Db.Contracts.InFlow.WS_Folder
@{
    var ParentName = "";
    if (Model != null)
    {
        ParentName = Model.Name;
    }

}

<div class="panel panel-default">
    <div class="panel-heading">Create new folder in <b>@ParentName</b></div>
    <div class="panel-body">

        @using (Html.BeginForm("CreateFolder", "Project", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {

            @Html.AntiForgeryToken()
            if (ParentName != "")
            {
                <input type="hidden" name="Parent_Id" value="@Model.Id" />
            }

            @Html.ValidationSummary(true)
            <div class="form-group">

                @Html.LabelFor(model => Model.Name, new { @class = "col-md-2 control-label" })

                @Html.TextBoxFor(model => Model.Name, new { @class = "form-control", required = "required " })

            </div>

            <div class="text-right">
                <button type="submit" class="btn btn-default">Create</button>
                @Html.ActionLink("Cancel", "Index", new { id = -1}, new { @class = "btn btn-default" })
            </div>

        }
    </div>
</div>
