@model strICT.InFlow.Db.Contracts.InFlow.WS_Project


@using (Html.BeginForm("EditProject", "Project", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.Hidden("Id", Model.Id)
    <div class="form-group">
        @Html.LabelFor(model => Model.Name, new { @class = "col-md-2 control-label" })

        @Html.TextBoxFor(model => Model.Name, new { @class = "form-control", required = "required " })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => Model.Description, new { @class = "col-md-2 control-label" })

        @Html.TextAreaFor(model => Model.Description, new { @class = "form-control" })

    </div>
    <button type="submit" class="btn btn-primary">Save changes</button>

    @Ajax.ActionLink("Cancel", "_ProjectWorkspace", new { id = Model.Id }, new AjaxOptions { UpdateTargetId = "pworkspace", InsertionMode = InsertionMode.Replace, HttpMethod = "GET" }, new { @class = "btn btn-default" })

}
